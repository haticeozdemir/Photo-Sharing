<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recycler_row_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici Email"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#0E08BD"
        >

    </TextView>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/recycler_row_imageview">

    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici Yorumu"
        android:textColor="#293673"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:id="@+id/recycler_row_yorum_text">

    </TextView>




</LinearLayout>